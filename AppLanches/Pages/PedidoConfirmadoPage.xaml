<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLanches.Pages.PedidoConfirmadoPage"
             Title="PedidoConfirmadoPage">
    <VerticalStackLayout
        VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand"
            Padding="90"
            BackgroundColor="White">

        <Image Source="confirmado.gif"
               HeightRequest="300"
               WidthRequest="300"
               Aspect="AspectFit" />

        <Label Text="Seu pedido foi confirmado!"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="Center"
                    TextColor="DarkBlue"
                    Margin="45,90,0,50" />

        <Button Text="Retornar"
                HorizontalOptions="Center"
                x:Name="BtnRetornar"
                Clicked="BtnRetornar_Clicked"
                VerticalOptions="CenterAndExpand" />
        
    </VerticalStackLayout>
</ContentPage>